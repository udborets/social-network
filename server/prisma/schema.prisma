generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String  @id @unique @default(uuid())
  name      String  @unique
  email     String  @unique
  posts     Post[]
  avatarUrl String?
  univ      String?
  city      String?
  age       Int?
}

model Post {
  id       String  @id @default(uuid())
  owner    User    @relation(fields: [ownerId], references: [id])
  ownerId  String
  likes    Int     @default(0)
  text     String?
  imageUrl String?
}

model Friends {
  id       String @id @default(uuid())
  userId   String
  friendId String
}

model Passwords {
  id       String @id @unique @default(uuid())
  ownerId  String @unique
  password String
}
