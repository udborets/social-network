generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String   @id @unique @default(uuid())
  name      String   @unique
  email     String   @unique
  posts     Post[]
  avatarUrl String?
  univ      String?
  city      String?
  age       Int?
  createdAt DateTime @default(now())
}

model Post {
  id       String  @id @default(uuid())
  ownerId  String
  owner    User    @relation(fields: [ownerId], references: [id])
  likes    Int     @default(0)
  text     String?
  imageUrl String?

  createdAt DateTime @default(now())
  likedBy   String[]
}

model Friends {
  id        String   @id @default(uuid())
  userId    String
  friendId  String
  createdAt DateTime @default(now())
}

model Passwords {
  id        String   @id @unique @default(uuid())
  ownerId   String   @unique
  password  String
  createdAt DateTime @default(now())
}
