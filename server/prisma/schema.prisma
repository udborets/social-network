generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id    String @id @unique @default(uuid())
  name  String @unique
  email String @unique
}

model Posts {
  id        Int     @id
  likes     Int     @default(0)
  text      String?
  image_url String?
}

model Friends {
  id        String @id @default(uuid())
  user_id   String
  friend_id String
}
