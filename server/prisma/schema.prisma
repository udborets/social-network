generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id    String  @id @unique @default(uuid())
  name  String  @unique
  email String  @unique
  posts Posts[]
}

model Posts {
  id       String  @id @default(uuid())
  owner    User    @relation(fields: [ownerId], references: [id])
  ownerId  String
  likes    Int     @default(0)
  text     String?
  imageUrl String?
}

model Friends {
  id       String @id @default(uuid())
  userId   String
  friendId String
}
